<%= javascript_tag do %>
var data = {'data-date-format': 'YYYYMMDD' };
$(function(){
  $('.datepicker').attr(data);
  $('.datepicker').datetimepicker();
});
<% end %>

<%= form_for(@result) do |f| %>
  <% if @result.errors.any? %>
    <div id="error_explanation">
      <h5>データ保存時、<%= @result.errors.count %>個のエラーが発生しました。</h5>
      <ul>
      <% @result.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
	  <table class="result_form_box">
<tr><td>
	  <table class="result_form_box">
	      <tr class="control-group">
	           <td class="form_label"><span class="label label-danger">必須</span><%= f.label :user_id, class: "control-label" %></td>
	           <td class="controls">
                 <%= f.select :user_id, User.where(job: '1', delete_flag: '0').order('display_order asc','user_id asc').map{|user| [user.user_name, user.user_id]} , {include_blank: true} ,{ :class => "input-large" } %>
	           </td>
	      </tr>
<!-- 基準年月はcontrollerでセット
	      <tr class="control-group">
	           <td class="form_label"><%= f.label :基準年月, class: "control-label" %></td>
	           <td class="controls">
	               <%= f.text_field :result_ym, class: "input-large" %>
	           </td>
	      </tr>
 -->
	      <tr class="control-group">
	           <td class="form_label"><span class="label label-danger">必須</span><%= f.label :result_date, class: "control-label" %></td>
	           <td class="controls calender">
	               <%= f.text_field :result_date, class: "input-large datepicker" %>
